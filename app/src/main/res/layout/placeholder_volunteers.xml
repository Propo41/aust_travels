<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/view6"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginStart="@dimen/item_spacing_med"
        android:layout_marginTop="@dimen/item_spacing_small"
        android:layout_marginEnd="@dimen/item_spacing_med"
        android:layout_marginBottom="@dimen/item_spacing_small"
        android:background="@color/light_ash"
        app:cardCornerRadius="@dimen/item_spacing"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view7"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="@dimen/item_spacing_med"
        android:background="@drawable/shape_circle"
        app:cardCornerRadius="@dimen/item_spacing"
        app:layout_constraintBottom_toBottomOf="@+id/view6"
        app:layout_constraintStart_toStartOf="@+id/view6"
        app:layout_constraintTop_toTopOf="@+id/view6" />


    <View
        android:id="@+id/view8"
        android:layout_width="0dp"
        android:layout_height="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="100dp"
        android:background="@color/ash"
        app:cardCornerRadius="@dimen/item_spacing"
        app:layout_constraintEnd_toEndOf="@+id/view6"
        app:layout_constraintStart_toEndOf="@+id/view7"
        app:layout_constraintTop_toTopOf="@+id/view7" />

    <View
        android:layout_width="0dp"
        android:layout_height="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="@dimen/item_spacing_med"
        android:layout_marginEnd="150dp"
        android:background="@color/ash"
        app:cardCornerRadius="@dimen/item_spacing"
        app:layout_constraintEnd_toEndOf="@+id/view6"
        app:layout_constraintStart_toEndOf="@+id/view7"
        app:layout_constraintTop_toBottomOf="@+id/view8" />


</androidx.constraintlayout.widget.ConstraintLayout>